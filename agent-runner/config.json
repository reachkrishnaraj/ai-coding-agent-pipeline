  "default_model": "claude-code",
  "agent_mapping": {
    "claude-code": "claude-code",
    "codex": "codex",
    "copilot": "gpt-4o",
    "default": "claude-code"
  },
  "file_extensions": {
    "include": [".py", ".js", ".ts", ".tsx", ".jsx", ".java", ".go", ".rs", ".rb", ".php", ".cs", ".cpp", ".c", ".h", ".hpp", ".swift", ".kt", ".scala", ".md", ".json", ".yaml", ".yml", ".toml", ".xml", ".html", ".css", ".scss", ".sql", ".sh", ".bash", ".zsh"],
    "exclude_dirs": ["node_modules", ".git", "dist", "build", "__pycache__", ".venv", "venv", "target", "vendor"]
