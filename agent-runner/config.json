    },
    "gpt-4o": {
      "provider": "openai",
      "model": "gpt-4o",
      "description": "Fast and capable for most coding tasks",
      "max_tokens": 4096
    },
    "gpt-4-turbo": {
      "provider": "openai",
      "model": "gpt-4-turbo",
      "description": "Good balance of speed and capability",
      "max_tokens": 4096
    },
    "codex": {
      "provider": "openai",
      "model": "gpt-4o",
      "description": "Quick code generation",
      "max_tokens": 4096
    },
    "gemini-pro": {
      "provider": "google",
      "model": "gemini/gemini-1.5-pro",
      "description": "Google's most capable model",
      "max_tokens": 8192
    },
    "gemini-flash": {
      "provider": "google",
      "model": "gemini/gemini-1.5-flash",
